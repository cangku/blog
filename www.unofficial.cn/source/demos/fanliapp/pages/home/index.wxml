<view class="fanli_page">
  <view class="weui-cells weui-cells_after-title">
			<view class="weui-cell">
					<view class="weui-cell__bd">
							<textarea class="weui-textarea" value="{{ msg }}" placeholder="输入需要查询优惠的链接" focus="true" />
					</view>
			</view>
			<view class="page">
					<view class="page__hd">
							<view class="page__title">Toast</view>
							<view class="page__desc">弹出式提示，采用小程序原生的toast</view>
					</view>
					<view class="page__bd">
							<view class="weui-btn-area">
									<button class="weui-btn" type="default" bindtap="openToast">成功提示</button>
									<button class="weui-btn" type="default" bindtap="openLoading">加载中提示</button>
							</view>
					</view>
			</view>
	</view>
	<view class="weui-btn-area">
			<button class="weui-btn" type="primary" bindtap="getCoupon">查询</button>
	</view>
</view>
