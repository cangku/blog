{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["prettier"],
    "rules": {
        "no-console": "off",
        "prettier/prettier": "error",
        "strict": [
            "error",
            "global"
        ],
        "curly": "warn"
    }
}