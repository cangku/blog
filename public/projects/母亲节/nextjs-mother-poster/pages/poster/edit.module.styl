.page {
    overflow: hidden;
    height: 100vh;
    position: fixed;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.preview {
    background-color: #101211FF;
    text-align: center;
    padding: 27px 0;
    height: 600px;
}
.previewWrapper {
    margin: 0 auto;
    overflow: hidden;
    height: 100%;
}

.draw {
    width: auto;
    max-height: calc(100% + 120px);
}

.reset {
    border: 2px solid rgba(255,255,255,1);
    position: absolute;
    top: 24px;
    right: 30px;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    justify-content: center;
    overflow: hidden;
    opacity: .6;
    .up {
        font-family: PingFang-SC-Medium;
        font-weight: 500;
        color: rgba(255,255,255,1);
        font-size: 24px;
        max-width 60px;
        align-self: center;
    }
    input {
        position: absolute;
        width: 100%;
        left: 0;
        right: 0;
        top: 0;
    }
}

// detail
.editor {
    padding: 30px 0 2px;
    overflow-y: scroll;
    // GET
    -webkit-overflow-scrolling: touch;
    height: calc(100% - 784px);
}
.title {
    height: 36px;
    font-size: 28px;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(16,18,17,1);
    line-height: 36px;
    padding-left: 36px;
}
.scroller {
    margin: 4px auto 4px;
    padding: 20px 0 40px;
    display: flex;
    overflow-x: scroll;
    // GET
    -webkit-overflow-scrolling: touch;
    &Item {
        width: 200px;
        height: 60px;
        margin-left: 24px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        box-sizing: border-box;
        &:first-of-type {
            margin-left: 36px;;    
        }
        &:last-of-type {
            position: relative;
            &:after {
                content: '';
                display: block;
                position: absolute;
                top: 0;
                right: -32px;
                height: 100%;
                width: 32px;
            }
        }
        img {
            max-width: 100%;
            vertical-align: middle;
        }

        &Color {
            width: 50px;
            height: 50px;
            margin-left: 66px;
            border-radius: 100%;
            position: relative;
            box-sizing: content-box;
            flex-shrink: 0;
            &Active {
                &::before {
                    content: '';
                    display: block;
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    background-image: url('./images/edit/circle-active.png');
                    background-position: 0 0;
                    background-size: 100% 100%;
                    background-repeat: no-repeat;
                    padding: 8px;
                    left: -8px;
                }
            }
        }
        &Active {
            border: 4px solid;
            border-image: linear-gradient(90deg, rgba(255,0,0,1), rgba(255,208,0,1), rgba(180,236,81,1)) 4 4;
        }
    }
}

.inputer {
    display: flex;
    align-items: center;
    padding-right: 32px;
    margin-bottom: 24px;
    div {
        width: 168px;
        min-width: 168px;
        flex-shrink: 0;
    }
    input {
        height: 66px;
        background: rgba(248,248,248,1);
        border: 1px solid rgba(221,221,221,1);
        width: 100%;
        
        height: 40px;
        font-size: 28px;
        font-family: PingFang-SC-Medium;
        font-weight: 500;
        color: rgba(0,0,0,1);
        line-height: 40px;

        padding: 13px 28px;
        opacity: 1;
        z-index: auto;
        // GET
        -webkit-appearance: none;
        border-radius: 0;
    }
}

.placeholder {
    height: 98px;
}

.btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height:98px;
    line-height: 98px;
    background:rgba(209,40,16,1);
    font-size:34px;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255,255,255,1);
    text-align: center;
}