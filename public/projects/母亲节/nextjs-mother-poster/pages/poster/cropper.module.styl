.page {
    height: 100vh;
    background: #fff;
    padding: 34px 30px 0;
    box-sizing: border-box;
}

.wrapper {
    position: relative;
    height: calc(100% - 232px);
}

.footer {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    .tool {
        display: flex;
        height: 97px;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid #EBEBEBFF;
        padding: 0 10px;
        .cancel, .confirm {
            width: 44px;
            height: 44px;
            padding: 20px;
        }
        .title {
            font-size: 34px;
            font-family: PingFang-SC-Bold;
            font-weight: bold;
            color: rgba(0,0,0,1);
            line-height: 48px;
        }
    }
}