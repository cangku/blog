.moregiftsmodule {
    width: 100%;

    .motherIndexContainer {
        width: 100%;
        position: relative;
    }

    .bannerImage {
        width: 100%;
        height: 915px;
    }

    .describe {
        margin: -108px 30px 0px;
        font-size: 30px;
        font-family: PingFangSC-Regular;
        font-weight: 400;
        color: rgba(29, 30, 31, 1);
        line-height: 52px;
    }

    .rules {
        margin: 60px 30px 0px;
        height: 100px;
        background: rgba(255, 243, 9, 1);
        border-radius: 2px;
        border: 3px solid rgba(0, 0, 0, 1);
        display: flex;
        flex-direction: row;

        .title {
            padding: 13px 13px;
            width: 74px;
            height: 74px;
            border-right: 3px solid rgba(0, 0, 0, 1);
            font-size: 30px;
            font-family: SourceHanSansCN-Heavy;
            font-weight: 800;
            color: rgba(29, 30, 31, 1);
            line-height: 38px;
            text-align: center;
        }

        .content {
            margin-left: 18px;
            font-size: 30px;
            font-family: PingFangSC-Semibold;
            font-weight: 600;
            color: rgba(29, 30, 31, 1);
            line-height: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            display: flex;
            align-items: center;

            span {
                height: 100px;
                // overflow: hidden;
                // text-overflow: ellipsis;
                // white-space: nowrap;
            }

            .contentImage {
                margin-left: 10px;
                width: 39px;
                height: 33px;
            }
        }
    }

    .goods {
        margin: 0px 30px;

        .goodItem {
            margin-top: 90px;

            .itemTitle {
                display: flex;
                flex-direction: row;

                .itemFirst {
                    font-size: 48px;
                    font-family: SourceHanSansCN-Heavy;
                    font-weight: 800;
                    color: rgba(238, 26, 34, 1);
                }

                .itemSecond {
                    font-size: 48px;
                    font-family: SourceHanSansCN-Heavy;
                    font-weight: 800;
                    color: #000000;
                }
            }

            .itemDescribe {
                margin-top: 24px;
                font-size: 36px;
                font-family: PingFangSC-Light;
                font-weight: 300;
                color: rgba(29, 30, 31, 1);
                line-height: 36px;
            }

            .itemDetails {
                margin-top: 64px;
                display: flex;
                flex-direction: row;

                .goodsImage {
                    background: #FAFAFA;
                    width: 230px;
                    height: 323px;
                }

                .goodsInfo {
                    margin-left: 32px;
                    width: calc(100% - 262px);
                    position: relative;
                    display: flex;
                    flex-direction: column;

                    .goodsTitle {
                        font-size: 36px;
                        font-family: PingFangSC-Medium;
                        font-weight: 500;
                        color: rgba(29, 30, 31, 1);
                        line-height: 44px;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                    }

                    .goodsPrice {
                        margin-top: 16px;
                        font-size: 24px;
                        font-family: PingFangSC-Regular;
                        font-weight: 400;
                        color: rgba(29, 30, 31, 1);
                        line-height: 24px;
                    }

                    .goodsSubtitle {
                        margin-top: 16px;
                        height: 84px;
                        font-size: 24px;
                        font-family: PingFangSC-Regular;
                        font-weight: 400;
                        color: rgba(29, 30, 31, 0.6);
                        line-height: 36px;
                        position: relative;

                        .rightArrow {
                            width: 30px;
                            height: 30px;
                            position: absolute;
                            top: 0px;
                            right: 3px;
                        }
                    }

                    .goodsCount {
                        margin-top: 16px;
                        font-size: 24px;
                        font-family: PingFangSC-Regular;
                        font-weight: 400;
                        color: rgba(238, 26, 34, 1);
                        line-height: 24px;
                    }

                    .goodsButtonBg {
                        width: calc(100% - 9px);
                        height: 68px;
                        background: #000000;
                        position: absolute;
                        bottom: 0px;

                        .goodsButton {
                            width: 100%;
                            height: 100%;
                            font-size: 32px;
                            font-family: PingFangSC-Semibold;
                            font-weight: 600;
                            color: rgba(255, 255, 255, 1);
                            line-height: 68px;
                            background: #EE1A22;
                            text-align: center;
                            position: relative;
                            bottom: 10px;
                            left: 9px;
                            padding-top: 2px;
                        }
                    }
                }
            }
        }
    }

    .moreGifts {
        margin: 90px 30px 0px;
        font-size: 40px;
        font-family: SourceHanSansCN-Bold;
        font-weight: bold;
        color: rgba(29, 30, 31, 1);
        line-height: 44px;
    }

    .moreGiftsDescribe {
        margin: 28px 30px 0px;
        font-size: 28px;
        font-family: PingFangSC-Regular;
        font-weight: 400;
        color: rgba(29, 30, 31, 1);
        line-height: 44px;
    }

    .moreGoods {
        margin: 32px 30px 0px 12px;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        flex-wrap: wrap;

        .item {
            width: calc(((100% - 54px) / 3));
            margin-bottom: 42px;
            display: flex;
            flex-direction: column;
            margin-left: 18px;

            .image {
                width: 100%;
                height: 218px;
                background-color: #f9f9f9;
            }

            .title {
                height: 66px;
                font-size: 26px;
                font-family: PingFangSC-Medium;
                font-weight: 500;
                color: rgba(29, 30, 31, 1);
                line-height: 36px;
                margin-top: 25px;
                margin-left: 6px;
                overflow: hidden;
            }

            .subtitle {
                height: 33px;
                font-size: 24px;
                font-family: PingFangSC-Regular;
                font-weight: 400;
                color: rgba(29, 30, 31, 1);
                line-height: 33px;
                margin-top: 14px;
                margin-left: 6px;
            }

            .priceContainer {
                margin-top: 22px;
                margin-left: 6px;
                display: flex;
                flex-direction: row;
                align-items: center;
                flex-wrap: nowrap;

                .price {
                    font-size: 28px;
                    font-family: PingFangHK-Semibold;
                    font-weight: 600;
                    color: rgba(238, 26, 34, 1);
                    line-height: 28px;
                }

                .discount {
                    margin-left: 10px;
                    height: 30px;
                    background: rgba(253, 232, 229, 1);
                    font-size: 20px;
                    font-family: PingFangSC-Medium;
                    font-weight: 500;
                    color: rgba(238, 26, 34, 1);
                    line-height: 30px;
                    text-align: center;
                    overflow: hidden;
                    white-space: nowrap;
                    padding: 0px 8px;
                }
            }

            .button {
                margin-top: 23px;
                background: rgba(238, 26, 34, 1);
                height: 51px;
                width: 100%;
                font-size: 26px;
                font-family: PingFangSC-Semibold;
                font-weight: 600;
                color: rgba(255, 255, 255, 1);
                line-height: 51px;
                text-align: center;
            }
        }
    }

    .useRules {
        margin: 36px 30px 0px;

        .rulesTitle {
            font-size: 40px;
            font-family: SourceHanSansCN-Bold;
            font-weight: bold;
            color: rgba(29, 30, 31, 1);
            line-height: 44px;
        }

        .rulesContent {
            margin-top: 20px;
            font-size: 28px;
            font-family: PingFangSC-Regular;
            font-weight: 400;
            color: rgba(29, 30, 31, 1);
            line-height: 48px;
        }
    }

    .bottomInfo {
        text-align: center;
        margin-top: 100px;

        .first {
            width: 100%;
            font-size: 42px;
            font-family: SourceHanSansCN-Heavy;
            font-weight: 800;
            color: rgba(238, 26, 34, 1);
            line-height: 32px;
        }

        .second {
            width: 100%;
            font-size: 24px;
            font-family: SourceHanSansCN-Heavy;
            font-weight: 800;
            color: rgba(238, 26, 34, 1);
            line-height: 32px;
        }

        .bottomLogo {
            width: 166px;
            height: 79px;
        }

        .third {
            margin-top: 27px;
            padding-bottom: 90px;
            font-size: 24px;
            font-family: PingFangSC-Light;
            font-weight: 300;
            color: rgba(0, 0, 0, 1);
            line-height: 44px;
        }
    }
}