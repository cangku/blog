.preview {
    height: 100vh;
    background: #fff;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    will-change: transform;
    transform: translateX(-100%) translateZ(0);
    text-align: center;
    overflow-y: scroll;
    // GET
    -webkit-overflow-scrolling: touch;
    .img {
        max-width: 100%;
        padding: 40px 117px 0;
        box-sizing: border-box;
        max-height: calc(100% - 170px);
        vertical-align: top;
    }
}

.poster {
    background: #000;
}

.footer {
    margin-top: 30px;
    padding: 0 117px 28px;
    display: flex;
    justify-content: space-between;
    button {
        -webkit-appearance: none;
        background: #fff;
        width: 100%;
        height: 88px;
        border: none;
        font-size:32px;
        font-family: PingFang-SC-Medium;
        font-weight: 500;
        color: rgba(255,255,255,1);
        padding: 0;
        &:first-of-type {
            color: #000;
            width: 190px;
            margin-right: 30px;
            flex-shrink: 0;
        }
        &:last-of-type {
            color: #fff;
            background-color: #D12810FF;
            position: relative;
            img {
                position: absolute;
                left: 0;
                right: 0;
                width: 100%;
                top: 0;
                bottom: 0;
                height: 100%;
                opacity: 0;
                padding: 0;
                max-height: 100%;
            }   
        }
    }    
}

.show {
    transform: translateX(0) translateZ(0);
}

.rule {
    padding: 36px 30px 28px;
    text-align: left;
    .title {
        height:38px;
        font-size:38px;
        font-family:PingFangSC-Medium;
        font-weight:500;
        color:rgba(0,0,0,1);
        line-height:38px;
        span {
            color: #EE1A22FF;
        }
    }
    .desc {
        margin-top: 24px;
        .line {
            font-size:30px;
            font-family:PingFangSC-Regular;
            font-weight:400;
            color:rgba(29,30,31,1);
            line-height:52px;
        }
    }
}

.goods {
    text-align: left;
}